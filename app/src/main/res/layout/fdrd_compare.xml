<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inputs">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fdrd_difference"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/fdrd_bank1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="@string/fd"
                android:textStyle="bold"
                android:textColor="@color/bank1"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                app:layout_constraintEnd_toStartOf="@+id/bank2"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/fdrd_bank2"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/rd"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/bank2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fdrc_amountDescLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fdrd_difference">
            <TextView
                android:id="@+id/fdrd_deposit_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/deposit_amount"/>
            <TextView
                android:id="@+id/fdrd_recurring_amount"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="38dp"
                android:gravity="center"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:text="@string/recurring_amount"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fdrd_amountLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fdrc_amountDescLinear">
            <EditText
                android:id="@+id/fdrd_deposit_amount_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/enter_amount"
                android:drawableRight="@drawable/rupee"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/hint"/>
            <EditText
                android:id="@+id/fdrd_recurring_amount_input"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/enter_amount"
                android:drawableRight="@drawable/rupee"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/hint"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fdrd_compare_interest"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:text="@string/dInterest"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fdrd_amountLinear"/>

        <LinearLayout
            android:id="@+id/fdrd_interestLinear"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fdrd_compare_interest">
            <EditText
                android:id="@+id/fdrd_compare_interest_input1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/rate"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:drawableEnd="@drawable/percent"
                android:textColorHint="@color/hint"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <EditText
                android:id="@+id/fdrd_compare_interest_input2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/rate"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:drawableEnd="@drawable/percent"
                android:textColorHint="@color/hint"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fdrd_compare_interest" />
        </LinearLayout>
        <TextView
            android:id="@+id/fdrd_compare_tenure"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:fontFamily="@font/roboto"
            android:text="@string/tenure_inmonths"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fdrd_interestLinear"/>


        <LinearLayout
            android:id="@+id/fdrd_tenureLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fdrd_compare_tenure">
            <EditText
                android:id="@+id/fdrd_compare_tenure_input1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="start"
                android:background="@drawable/rounded_inputs"
                android:hint="@string/tenure_input"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/hint"/>

