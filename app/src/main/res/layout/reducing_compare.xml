<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/bank1"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/bank1"
            android:textStyle="bold"
            android:textColor="@color/colorAmber_900"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/bank2"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="220dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/bank2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/bank2"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/main_gradient2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <EditText
            android:id="@+id/compare_amount_input"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/loan_amount"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/compare_interest_input1"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/interest"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_amount_input" />

        <EditText
            android:id="@+id/compare_interest_input2"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/interest"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_amount_input" />

        <EditText
            android:id="@+id/compare_period_input1"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/cperiod"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_interest_input1" />

        <EditText
            android:id="@+id/compare_period_input2"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/cperiod"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_interest_input2" />

        <EditText
            android:id="@+id/compare_processing_fees_input1"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/processing_fees_output"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_period_input1" />

        <EditText
            android:id="@+id/compare_processing_fees_input2"
            android:background="@drawable/rounded_inputs"
            android:textColor="@color/hint"
            android:textColorHint="@color/hint"
            android:hint="@string/processing_fees_output"
            android:layout_width="180dp"
            android:layout_height="38dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_period_input2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            style="?attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_processing_fees_input1">

            <Button
                android:id="@+id/compare_calculate"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/calculate"
                android:textColor="@color/buttons"
                android:textStyle="bold"
                android:textSize="22sp"/>

            <Button
                android:id="@+id/compare_reset"
                style="?attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/buttons"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginStart="90dp"
                android:text="@string/reset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compare_EMI_result_ll"
            android:orientation="vertical"
            android:background="@drawable/rounded_outputs"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" >
            <TextView
                android:id="@+id/compare_EMI_perMonth"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/emi_per_month"
                android:textSize="20sp"
                android:textColor="@color/inputs"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/compare_EMI_output1"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="|"
                    android:gravity="center"
                    android:textColor="@color/inputs"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/compare_EMI_output2"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compare_TotalInterest_result_ll"
            android:orientation="vertical"
            android:background="@drawable/rounded_outputs"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_EMI_result_ll" >
            <TextView
                android:id="@+id/compare_total_interest"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/total_interest"
                android:textColor="@color/inputs"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/compare_total_interest_output1"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/inputs"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="|"
                    android:textStyle="bold"
                    android:textColor="@color/inputs"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/compare_total_interest_output2"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compare_TotalAmount_result_ll"
            android:orientation="vertical"
            android:background="@drawable/rounded_outputs"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_TotalInterest_result_ll" >
            <TextView
                android:id="@+id/compare_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/total_amount"
                android:textColor="@color/inputs"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/compare_total_amount_output1"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="|"
                    android:textStyle="bold"
                    android:textColor="@color/inputs"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/compare_total_amount_output2"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/compare_processing_fees_result_ll"
            android:orientation="vertical"
            android:background="@drawable/rounded_outputs"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compare_TotalAmount_result_ll" >
            <TextView
                android:id="@+id/compare_processing_fees"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/processing_fees_output"
                android:textColor="@color/inputs"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/compare_processing_fees_output1"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/inputs"
                    android:textSize="20sp"
                    android:textStyle="normal|bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="|"
                    android:textColor="@color/inputs"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/compare_processing_fees_output2"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/inputs"
                    android:textStyle="normal|bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>