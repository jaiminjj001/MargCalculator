<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inputs">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/inputs">

    <LinearLayout
        android:id="@+id/outer_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/output_background">

        <LinearLayout
            android:id="@+id/loan_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Oloan_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/amount"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Oloan_amount_value"
                android:drawableStart="@drawable/rupee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto"
                android:gravity="start"
                android:textSize="18sp"
                android:textStyle="bold" />
         </LinearLayout>

        <LinearLayout
            android:id="@+id/interest_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Ointerest_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/dInterest"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Ointerest_rate_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/period_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Operiod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/loan_tenure"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Operiod_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/processing_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Oprocessing_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="15dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="@string/processing_fees_output"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Oprocessing_fees_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/EMI_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/outer_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:cardElevation="4dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical">
        <TextView
            android:id="@+id/EMI_perMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emi_per_month"
            android:fontFamily="@font/roboto"
            android:textSize="16sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/EMI_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/rupee"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/Processing_fees_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/EMI_card"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/total_processing_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/processing_fees_output"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/processing_fees_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/rupee"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Total_interest_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Processing_fees_card"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/total_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_interest"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/total_interest_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/rupee"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Total_amount_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/Total_interest_card"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/border"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical">
            <TextView
                android:id="@+id/total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/total_amount"
                android:fontFamily="@font/roboto"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/total_amount_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:drawableStart="@drawable/rupee"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Total_amount_card"
        app:layout_constraintStart_toStartOf="parent">
    <Button
        android:id="@+id/share"
        android:drawableStart="@drawable/download"
        android:background="@drawable/reset_compare_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download PDF"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/Total_amount_card"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/emi_details"
        android:background="@drawable/reset_compare_ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emi_details"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/Total_amount_card"
        app:layout_constraintEnd_toEndOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>